<!DOCTYPE html>

<html>

  <head>

    <%
      cur_page_title = ""
      cur_page_title += "#{content_for(:page_title)} | " \
        if content_for?(:page_title)
      cur_page_title += "Julia Observer"
    %>

    <title> <%= cur_page_title %> </title>
    <meta property="og:title" content="<%= cur_page_title %>" />
    <meta itemprop="name" content="<%= cur_page_title %>">
    <meta name="twitter:title" content="<%= cur_page_title %>">

    <meta name="google-site-verification" content="bv52cjhcijV21-uXOIIjeEasTB30O4TqbHwMu7W3fBc" />

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="keywords" content="julia package browser list discover popular trending">
    <meta name="author" content="ahab io">

    <%
      if content_for?(:page_description)
        cur_page_description = content_for(:page_description)
      else
        cur_page_description = "Julia Observer helps you find your next Julia package. It provides a visual interface for exploring the Julia language's open-source ecosystem."
      end
    %>

    <meta name="description" content="<%= cur_page_description %>">
    <meta itemprop="description" content="<%= cur_page_description %>">
    <meta name="twitter:description" content="<%= cur_page_description.truncate(180) %>">
    <meta property="og:description" content="<%= cur_page_description %>" />

    <%
      cur_page_image = image_url "logo.png"
    %>

    <meta itemprop="image" content="<%= cur_page_image %>">
    <meta name="twitter:image:src" content="<%= cur_page_image %>">
    <meta property="og:image" content="<%= cur_page_image %>" />

    <meta name="twitter:card" content="summary_large_image">
    <meta property="og:url" content="http://www.juliaobserver.com/" />
    <meta name="twitter:site" content="Julia Observer">
    <meta property="og:site_name" content="Julia Observer" />

    <%= csrf_meta_tags %>

    <%= favicon_link_tag %>

    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag "//fonts.googleapis.com/css?family=Roboto:300,400,500,700", media: 'all', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">

    <script>
      function isTouchDevice() {
        return true == ("ontouchstart" in window || window.DocumentTouch && document instanceof DocumentTouch);
      }

      var domainHasWWW = !!document.domain.match('www');

      var customInit = function() {
        $.material.init();

        if( isTouchDevice() === false ) {
          $('.cs-main-area').attr('tabindex', 0);
          $('.js-tooltip').tooltip();
        }

        if (typeof ga === "function") {
          if ( typeof event !== "undefined" && event.data ) {
            ga("set", "location", event.data.url);
            ga("send", "pageview");
          } else {
            ga("send", "pageview", location.pathname);
          }
        }

        if ( domainHasWWW ) {
          addQueryToSettingsLinks();
        }

        $('.cs-main-area').focus();
      };

      var addQueryToSettingsLinks = function() {
        var settingsLinks = $('a[href^="/settings"]'),
            arrayLength = settingsLinks.length;

        for (i = 0; i < arrayLength; i++) {
          hasQueryAdded = settingsLinks[i].href.match('has_www');
          if ( hasQueryAdded ) { continue; }

          settingsLinks[i].href += '&has_www=';
          settingsLinks[i].href += domainHasWWW ? 'true' : 'false';
        }
      }

      $(document).ready(ahoy.trackAll);

      $(document).ready(customInit);
      $(document).on('turbolinks:load', customInit);
    </script>

    <% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga("create", "UA-90729526-1", "auto");
      </script>
    <% end %>

  </head>

  <body>

    <script>
      <% if cookies[:needs_refresh] == 'true' %>
        Turbolinks.clearCache();
        <% cookies.delete :needs_refresh %>
      <% end %>
    </script>

    <%= link_to 'dummy-link', dummy_path('dummy_id'), class: "cs-dummy-link js-dummy-link", rel: "nofollow" %>

    <% is_log_page = request.path.starts_with? '/log' %>

    <%= render 'layouts/navbar', navbar_class: is_log_page ? 'primary' : 'inverse' %>

    <%= render 'layouts/modal' %>

    <%= yield %>

  </body>

</html>
